{
  "parser": "babel-eslint",

  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },

  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true
  },

  "plugins": [
    "babel",
    "react",
  ],

  "rules":  {

    "quotes"                      : [2, "single", "avoid-escape"],
    "brace-style"                 : [2, "1tbs", { "allowSingleLine": false }],
    "no-trailing-spaces"          : 2,
    "semi"                        : [2, "always"],
    "eqeqeq"                      : 2,
    "curly"                       : [2, "all"],
    "consistent-return"           : 2,
    "no-redeclare"                : 2,
    "no-dupe-keys"                : 2,
    "no-extra-semi"               : 2,
    "no-undef-init"               : 2,
    "yoda"                        : [2, "never"],
    "dot-notation"                : [2, {"allowKeywords": true, "allowPattern": ""}],
    "no-unneeded-ternary"         : 2,
    "no-empty"                    : 2,
    "no-alert"                    : 2,
    "no-console"                  : 2,
    "no-debugger"                 : 2,
    "semi-spacing"                : [2, {"before": false, "after": true}],
    "comma-spacing"               : [2, {"before": false, "after": true}],
    "indent"                      : [2, 2, {"SwitchCase": 1}],
    "new-parens"                  : 2,
    "no-mixed-spaces-and-tabs"    : 2,
    "no-multiple-empty-lines"     : [2, {"max": 2}],
    "no-spaced-func"              : 2,
    "no-underscore-dangle"        : 0,
    "space-before-function-paren" : [2, "never"],
    "space-infix-ops"             : [2, {"int32Hint": false}],
    "space-unary-ops"             : [2, { "words": true, "nonwords": false }],
    "no-irregular-whitespace"     : 2,
    "eol-last"                    : 2,
    "object-curly-spacing"        : [2, "never"],
    "array-bracket-spacing"       : [2, "never"],
    "computed-property-spacing"   : [2, "never"],
    "space-in-parens"             : [2, "never"],
    "space-return-throw-case"     : 2,
    "spaced-comment"              : [2, "always"],
    "comma-dangle"                : [2, "always-multiline"],
    "linebreak-style"             : [2, "unix"],
    "comma-style"                 : [2, "last"],
    "space-before-blocks"         : [2, "always"],
    "no-undef"                    : 2,
    "no-use-before-define"        : 2,
    "no-loop-func"                : 0,
    "no-multi-str"                : 0,
    "no-lonely-if"                : 2,

    // TODO Turn on when possible

    // "no-unused-vars"           : [2, {"vars": "all", "args": "after-used"}],
    // "key-spacing"              : [2, {"align": "colon"}],
    // "one-var"                  : [2, "always"],

    // To be applied subjectively based on whether an object is actually being used as an associative array
    // Eventually all such cases should either be reworked into objects or replaced with ES6 Maps
    // See https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/Map
    "quote-props"              : [2, "as-needed"],

    // TODO Turn on when possible
    "react/prop-types"           : 2,

    "no-var"                        : 2,
    "no-unused-vars"                : [2, {"vars": "all", "args": "after-used"}],
    "react/jsx-uses-react"          : 2,
    "react/jsx-quotes"              : [2, "double", "avoid-escape"],
    "react/jsx-no-undef"            : 2,
    "react/no-did-mount-set-state"  : [2, "allow-in-func"],
    "react/no-did-update-set-state" : 2,
    "react/no-multi-comp"           : 2,
    "react/react-in-jsx-scope"      : 2,
    "react/self-closing-comp"       : 2,
    "react/wrap-multilines"         : 2,
    "react/jsx-boolean-value"       : [2, "always"],
  },
}